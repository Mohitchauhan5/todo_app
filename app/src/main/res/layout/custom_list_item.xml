<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_layout">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="16dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textAllCaps="false"
            android:background="@drawable/light_blue_bg"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:id="@+id/button_delete"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:visibility="invisible"
            />



        <LinearLayout

            android:id="@+id/linear_layout"

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView


                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:textColor="@color/title_color"
                    />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|end"
                    android:id="@+id/frame_click"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/more"
                        android:layout_gravity="center_vertical|end"

                        app:tint="@color/more_color"

                        />
                </FrameLayout>



            </FrameLayout>



            <TextView
                android:id="@+id/text_note"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/description_color"

               android:layout_marginEnd="30dp"
                android:maxLines="2"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem "



                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"
                    android:layout_gravity="center_vertical|end"
                    app:tint="@color/clock_tint"

                    />
                <TextView


                    android:id="@+id/text_date"
                   android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 June"

                    android:layout_gravity="center_vertical"

                    android:textColor="@color/grey_cool"

                    />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>







</FrameLayout>